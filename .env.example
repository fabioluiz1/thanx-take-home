# Sentry Configuration
# Copy to .env and fill in values from sentry.io

# DSN (Data Source Name) - found in Project Settings > Client Keys
# Format: https://<key>@<org>.ingest.sentry.io/<project-id>
SENTRY_DSN_API=
SENTRY_DSN_WEB=

# Auth token for source map uploads - create at sentry.io > Settings > Auth Tokens
# Required scope: project:releases
SENTRY_AUTH_TOKEN=

# Organization slug - from your Sentry URL: sentry.io/organizations/<org-slug>/
SENTRY_ORG=

# Project slug for frontend - from Project Settings > General (e.g., "rewards-web")
# Used by Vite plugin to upload source maps to the correct project
SENTRY_PROJECT_WEB=
